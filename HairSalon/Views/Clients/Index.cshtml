@{
  Layout = "_Layout";
}

@using HairSalon.Models;
<br>
<h1>Clients</h1>
<hr />

@if (@Model.Count == 0)
{
  <h3>Add some clients!</h3>
} 
else
{
  <ul>
    @foreach (Client client in Model)
    {
      <li>@Html.ActionLink($"{client.LastName}", "Details", new { id = client.ClientId }) | @client.Stylist.Name</li>
    }
  </ul>
}
<hr />
<p>@Html.ActionLink("Add new client", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>